<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<p class="text-center inline-block">
  <span class="next py-1 sm:py-2 ml-1 rounded-md bg-form hover:bg-gray-100">
    <%= link_to_unless current_page.last?, t('views.pagination.next').html_safe, url, rel: 'next', remote: remote, class: 'py-1 sm:py-2 px-2 sm:px-3' %>
  </span>
</p>
