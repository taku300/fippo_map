<div class="min-h-full">
  <nav class="bg-[#4BA9FF]">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <%= link_to root_path, data: {turbo: false} do %>
              <%= image_tag "fippo.png", class: "sm:h-10 sm:w-40 w-28",alt: t('defaults.fippo_map') %>
            <% end %>
          </div>
        </div>
        <nav class="bolck">
          <div class="ml-4 flex items-center md:ml-6">
            <%= link_to t('defaults.map'), fishes_path, class: "text-white hover:bg-gray-100 hover:text-black rounded-md px-1 py-2 mr-1 m:mr-2 text-xs sm:text-sm font-medium", 'data-turbo': false %>
            <%= link_to t('defaults.list'), list_fishes_path, class: "text-white hover:bg-gray-100 hover:text-black rounded-md px-1 py-2 mr-1 sm:mr-2 text-xs sm:text-sm font-medium", 'data-turbo': false %>
            <% if logged_in? %>
              <%# ベルマーク %>
              <%= link_to mypage_notifications_path, class: "relative rounded-full bg-[#4BA9FF] p-1 text-white hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800 mr-1 sm:mr-3" do %>
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
                </svg>
                <% if unchecked_notifications.any? %>
                  <div class="absolute top-0 right-0"><%= heroicon 'information-circle', options: { class: "w-4", fill: "#ff3399" } %></div>
                <% end %>
              <% end %>
              <!-- Profile dropdown -->
              <div class="relative">
                <div>
                  <button type="button" class="flex max-w-xs items-center rounded-full bg-gray-800 text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" id="js-user-menu-button" aria-expanded="false" aria-haspopup="true">
                    <%= image_tag current_user.avatar_url(:thumbnail), class: "h-8 w-8 rounded-full", alt: User.human_attribute_name(:avatar) %>
                  </button>
                  <div class="hidden absolute right-0 z-10 mt-2 w-32 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                    <%= link_to t('defaults.my_page'), mypage_dashboard_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem", tabindex: "-1", id: "user-menu-item-0", data: {turbo: false} %>
                    <%= button_to t('defaults.logout'), logout_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem", tabindex: "-1", id: "user-menu-item-2", data: {turbo: false} %>
                  </div>
                </div>
              </div>
            <% else %>
              <%= link_to t('defaults.login'), login_path, class: "text-white hover:bg-gray-500 rounded-md px-1 py-2 text-xs sm:text-sm font-medium"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>
