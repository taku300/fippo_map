<div class="bg-[#E9F0FE]">
<% if flash[:notice] %>
  <div class="max-w-[800px] mx-auto p-4 mt-3 mb-4 text-sm text-blue-700 bg-blue-100 rounded-lg  dark:text-blue-800" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="max-w-[800px] mx-auto p-4 mt-3 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:text-red-800" role="alert">
    <%= flash[:alert] %>
  </div>
<% end %>
</div>
