<div class="bg-form py-16 px-6 sm:py-24 lg:px-8 max-w-[800px] m-auto my-16 rounded-2xl">
  <div class="mx-auto max-w-2xl text-center">
    <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"><%= t('.title') %></h2>
  </div>
  <div class="mx-auto mt-6 max-w-xl sm:mt-12">
    <%= simple_form_for :user, url: password_resets_path, builder: SimpleForm::Tailwind::FormBuilder, data: { turbo: false } do |f| %>
      <%= f.input :email %>
      <%= f.button :submit, t('.submit') %>
    <% end %>
  </div>
</div>
