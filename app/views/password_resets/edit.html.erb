<div class="bg-form py-16 px-6 sm:py-24 lg:px-8 max-w-[800px] m-auto my-16 rounded-2xl">
  <div class="mx-auto max-w-2xl text-center">
    <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"><%= t('.title') %></h2>
  </div>
  <div class="mx-auto mt-6 max-w-xl sm:mt-12">
    <%= simple_form_for @user, url: password_reset_path(@token), builder: SimpleForm::Tailwind::FormBuilder do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
