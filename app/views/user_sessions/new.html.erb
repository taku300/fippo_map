<% set_meta_tags title: t('.title') %>

<div class="bg-form py-16 px-6 sm:py-24 lg:px-8 max-w-[800px] m-auto my-16 rounded-2xl">
  <div class="mx-auto max-w-2xl text-center">
    <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"><%= t('.title') %></h2>
  </div>
  <div class="mx-auto mt-6 max-w-xl sm:mt-12">
    <%= simple_form_for :user, url: :login, method: :post, builder: SimpleForm::Tailwind::FormBuilder, data: { turbo: false } do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.button :submit, t('.submit') %>
    <% end %>
  </div>
  <div class='flex justify-center mt-5 text-indigo-600'>
    <%=link_to t('.sign_up'), new_user_path, class: 'mr-10', data: { turbo: false } %>
    <%=link_to t('.forgotten_password'), new_password_reset_path, data: { turbo: false } %>
  </div>
</div>
